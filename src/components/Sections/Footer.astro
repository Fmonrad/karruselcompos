---
import Logobutton from "../Buttons/Logobutton.astro";
import Subscribe from "../Buttons/Subscribe.astro";
---

<!-- Her skal footer sammensættes -->
<footer>
  <div class="footer-container">
    <!-- Logo og Event info -->
    <div class="logo-section">
      <Logobutton />
      <p>Karrusel<br />28—30 August 2025<br />Copenhagen, Refshaleøen</p>
      <input type="email" placeholder="Email" />
      <Subscribe />

      <!-- Festival Info Links -->
      <div class="links-section">
        <h4>FESTIVAL INFO</h4>
        <ul>
          <li><a href="#">About</a></li>
          <li><a href="#">Volunteer</a></li>
          <li><a href="#">Survey</a></li>
          <li><a href="#">FAQ</a></li>
          <li><a href="#">Lost & Found</a></li>
          <li><a href="#">Map</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Copyright eller anden information -->
  <div class="footer-bottom">
    <p>Karrusel - 2024</p>
  </div>
</footer>
<style>
  footer {
    background-color: #6a0572; /* Baggrund farve for footeren */
    padding: 40px 20px;
    text-align: center;
  }

  .footer-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Style for Logo-sektionen */
  .logo-section {
    text-align: center;
    margin-bottom: 40px;
  }

  .logo-section p {
    font-size: 16px;
    line-height: 1.5;
  }

  .logo-section input {
    padding: 10px;
    margin-top: 20px;
    width: 200px;
    border: none;
    border-radius: 4px;
  }

  /* Style for Links-sektionen */
  .links-section {
    margin-top: 20px;
  }

  .links-section h4 {
    font-size: 18px;
    margin-bottom: 10px;
  }

  .links-section ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  .links-section ul li {
    margin: 10px;
  }

  .links-section ul li a {
    color: white;
    text-decoration: none;
    font-size: 16px;
  }

  .footer-bottom {
    margin-top: 40px;
    font-size: 14px;
  }

  /* Desktop layout adjustment */
  @media (min-width: 768px) {
    .footer-container {
      flex-direction: column;
      align-items: center;
    }

    .logo-section {
      margin-bottom: 40px;
    }

    .links-section {
      margin-top: 20px;
      width: 100%; /* Gør links-sektionen bredere på desktop */
    }

    .links-section ul {
      justify-content: center;
      flex-wrap: wrap;
    }
  }
</style>
