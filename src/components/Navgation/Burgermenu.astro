<style>
  /* Basis styling for burger-ikonet */
  .burger-icon {
    cursor: pointer;
    width: 30px;
    height: 22px;
    position: fixed; /* Gør den fast på skærmen */
    top: 20px;
    right: 20px; /* Placerer burger-menuen i højre hjørne */
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    z-index: 100;
  }

  .burger-icon span {
    display: block;
    height: 4px;
    width: 100%;
    background-color: white;
    border-radius: 2px;
    transition: all 0.3s ease-in-out;
    position: relative;
  }

  /* Når menuen er åben */
  .burger-icon.open span:nth-child(1) {
    transform: rotate(45deg);
    top: 8px;
    position: absolute;
  }

  .burger-icon.open span:nth-child(2) {
    opacity: 0;
  }

  .burger-icon.open span:nth-child(3) {
    transform: rotate(-45deg);
    top: 8px;
    position: absolute;
  }

  /* Skjul dropdown-menuen */
  .menu {
    list-style: none;
    padding: 0;
    margin: 0;
    display: none;
    flex-direction: column;
    background-color: rgba(0, 0, 0, 0.8);
    position: fixed; /* Gør menuen fast så den følger med burger-ikonet */
    top: 60px; /* Placér lige under burger-ikonet */
    right: 20px; /* Justér til samme som burger-ikonet */
    width: 200px;
    z-index: 99;
  }

  .menu li {
    padding: 15px;
    text-align: right;
  }

  .menu li a {
    color: white;
    text-decoration: none;
    font-size: 18px;
  }

  .menu.visible {
    display: flex;
  }

  /* For en glidende overgang af menuen */
  .hidden {
    display: none;
  }
</style>

<script>
  const burgerIcon = document.getElementById("burgerIcon");
  const menuLinks = document.getElementById("menuLinks");

  burgerIcon.addEventListener("click", () => {
    burgerIcon.classList.toggle("open"); // Toggle mellem burger og kryds
    menuLinks.classList.toggle("visible"); // Skift mellem at vise/skjule menuen
  });
</script>
